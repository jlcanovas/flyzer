{
  "name": "Flyzer - Forum analyzer",
  "version": "0.1",
  "description": "Extract a collaboration graph from Forums",
  "permissions": ["activeTab", "declarativeContent"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/cg16.png",
      "32": "images/cg32.png",
      "48": "images/cg48.png",
      "128": "images/cg128.png"
    }
  },
  "icons": {
    "16": "images/cg16.png",
    "32": "images/cg32.png",
    "48": "images/cg48.png",
    "128": "images/cg128.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self'; object-src 'self'"
}